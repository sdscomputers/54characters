
<%= form_for @organization do |f| %>
  <% if organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
      <% organization.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  <% end %>
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :organization_name, 'Name', :class => 'control-label' %>
          <%= f.text_field :organization_name, :class => 'tinymce form-control', :disabled => true, :autofocus => true %>
          <%= tinymce %>
        </div>
        <div class="form-group">
          <%= f.label :description, 'Description', :class => 'control-label' %>
          <%= f.text_area :description, :class => 'tinymce form-control', :disabled => true, :autofocus => true %>
          <%= tinymce %>
        </div>
        <div class="form-group">
          <%= f.label :address, 'Address', :class => 'control-label' %>
          <%= f.text_field :address, :class => 'tinymce form-control', :disabled => true, :autofocus => true %>
          <%= tinymce %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'Email', :class => 'control-label' %>
          <%= f.text_field :email, :class => 'tinymce form-control', :disabled => true, :autofocus => true %>
          <%= tinymce %>
        </div>
        <div class="form-group">
          <%= f.label :max_beds, 'Beds Capacity', :class => 'control-label' %>
          <%= f.text_field :max_beds, :class => 'tinymce form-control', :disabled => true, :autofocus => true %>
          <%= tinymce %>
        </div>
        <div class="form-group">
          <%= f.label :client_bed_count, 'Beds Available', :class => 'control-label' %>
          <%= f.text_field :client_bed_count, :class => 'tinymce form-control', :disabled => true, :autofocus => true %>
          <%= tinymce %>
        </div>
        <div class="checkbox col-lg-12"><label><%= f.check_box :active %> Active</label></div>
      </div>
    </div>
<% end %>
