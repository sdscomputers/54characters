<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Birthday</th>
      <th>Social Security Number</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% clients.each do |client| %>
      <tr>
        <td><%= client.full_name %></td>
        <td><%= l(client.birthday, format: :nice) %></td>
        <th><%= client.ss_number %></th>
        <th>
          <%= link_to 'Refer', new_referral_path(client_id: client.id), class: 'btn btn-primary' %>
        </th>
      </tr>
    <% end %>
  </tbody>
</table>
